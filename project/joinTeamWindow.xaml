<Window x:Class="project.joinTeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="joinTeamWindow" Height="450" Width="673">
    <Grid Margin="0,0,10,0">
        <ListView x:Name="teamListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,164,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="joinButton" Content="Vstoupit" HorizontalAlignment="Left" Margin="504,10,0,0" VerticalAlignment="Top" Height="70" Width="159" FontSize="16" Click="joinButton_Click"/>
        <Button x:Name="showMembersButton" Content="Zobrazit hráče" HorizontalAlignment="Left" Margin="504,85,0,0" VerticalAlignment="Top" Height="59" Width="159" FontSize="16"/>
        <Button x:Name="cancelButton" Content="Zpět" HorizontalAlignment="Left" Margin="504,149,0,0" VerticalAlignment="Top" Height="59" Width="159" FontSize="16" Click="cancelButton_Click"/>

    </Grid>
</Window>
