<Window x:Class="project.joinTournamentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="joinTournamentWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="tournamentsListView" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,162,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="joinButton" Content="Vstoupit" HorizontalAlignment="Left" Margin="643,29,0,0" VerticalAlignment="Top" Height="42" Width="132" FontSize="18" Click="joinButton_Click"/>
        <Button x:Name="cancelButton" Content="Zpět" HorizontalAlignment="Left" Margin="643,95,0,0" VerticalAlignment="Top" Height="48" Width="132" FontSize="18" Click="cancelButton_Click"/>

    </Grid>
</Window>
